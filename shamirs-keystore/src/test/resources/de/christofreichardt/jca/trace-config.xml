<?xml version="1.0" encoding="UTF-8"?>
<TraceConfig xmlns="http://www.christofreichardt.de/java/tracer">
    <Pool>
        <TraceLogger name="TestTracer" class="de.christofreichardt.diagnosis.file.FileTracer">
            <LogDir>./log/</LogDir>
            <AutoFlush>true</AutoFlush>
            <BufSize>1024</BufSize>
            <Limit>4194304</Limit>
            <Context>
                <Thread name="main">
                    <Online>true</Online>
                    <DebugLevel>10</DebugLevel>
                </Thread>
            </Context>
        </TraceLogger>
    </Pool>
    <DefaultTracer class="de.christofreichardt.diagnosis.JDKLoggingRouter"/>
    <Map>
        <Threads>
            <Thread name="main">
                <TraceLogger ref="TestTracer" />
            </Thread>
        </Threads>
    </Map>
</TraceConfig>
